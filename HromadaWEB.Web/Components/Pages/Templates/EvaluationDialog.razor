@page "/evaluation-dialog"

@rendermode InteractiveServer

@inject DialogService DialogService

<div class="dialog">
    <div class="dialog-title">Оцінити відповідь</div>
    <div class="dialog-content">
        <input type="number" @bind="Score" min="0" max="10" class="input-score" />
    </div>
    <div class="dialog-actions">
        <button @onclick="Save" class="btn btn-primary">Зберегти</button>
        <button @onclick="Cancel" class="btn btn-secondary">Скасувати</button>
    </div>
</div>

<style>
    .dialog {
        display: flex;
        flex-direction: column;
        width: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #fff;
    }

    .dialog-title {
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    .dialog-content {
        margin-bottom: 20px;
    }

    .input-score {
        width: 100%;
        padding: 8px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .dialog-actions {
        display: flex;
        justify-content: flex-end;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1em;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        margin-right: 10px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }
</style>

@code {
    [Parameter]
    public Guid AnswerId { get; set; }

    private decimal Score { get; set; }

    private void Save()
    {
        DialogService.Close(Score);
    }

    private void Cancel()
    {
        DialogService.Close(null);
    }
}
