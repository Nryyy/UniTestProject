@page "/product"

<h3 class="text-center text-primary">IndexProduct</h3>

@if (ProductModels == null)
{
    <div class="text-center">
        <p class="text-muted">Завантаження...</p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Назва</th>
                    <th class="text-center">Опис</th>
                    <th class="text-center">Ціна</th>
                    <th class="text-center">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in ProductModels)
                {
                    <tr>
                        <td class="text-center">@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                        <td class="text-center">
                            <button class="btn btn-outline-primary me-2">Редагувати</button>
                            <button class="btn btn-outline-danger">Видалити</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
